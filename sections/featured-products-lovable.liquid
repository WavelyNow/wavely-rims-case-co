{{ 'featured-products-lovable.css' | asset_url | stylesheet_tag }}

<div class="featured-products-lovable-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-header text-center">
        <h2 class="section-title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section-subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="products-grid">
      {% assign collection = collections[section.settings.collection] %}
      {% if collection != blank %}
        {% assign products_to_show = section.settings.rows | times: section.settings.products_per_row %}
        {% for product in collection.products limit: products_to_show %}
          <div class="product-card">
            <div class="product-image">
              <a href="{{ product.url }}">
                {% if product.featured_image != blank %}
                  <img src="{{ product.featured_image | image_url: width: 600 }}" 
                       alt="{{ product.featured_image.alt | default: product.title }}"
                       loading="lazy">
                {% else %}
                  <div class="product-placeholder">
                    <span>{{ product.title | first }}</span>
                  </div>
                {% endif %}
              </a>
              
              {% if section.settings.show_quick_buy %}
                <div class="quick-buy">
                  <form method="post" action="/cart/add">
                    <input type="hidden" name="id" value="{{ product.first_available_variant.id }}">
                    <button type="submit" class="btn btn-quick-buy">
                      Add to Cart
                    </button>
                  </form>
                </div>
              {% endif %}
            </div>
            
            <div class="product-info">
              <h3 class="product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              {% if section.settings.show_vendor and product.vendor != blank %}
                <p class="product-vendor">{{ product.vendor }}</p>
              {% endif %}
              
              {% if section.settings.show_price %}
                <p class="product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="price-compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="price-current">{{ product.price | money }}</span>
                </p>
              {% endif %}
              
              <a href="{{ product.url }}" class="btn btn-view-product">
                View Details
              </a>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="no-products text-center">
          <p>No products found in this collection.</p>
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.show_view_all and section.settings.view_all_text != blank %}
      <div class="section-footer text-center">
        <a href="{{ section.settings.view_all_link }}" class="btn btn-primary">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products Lovable",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to display"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products per row",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "rows",
      "label": "Number of rows",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_buy",
      "label": "Show quick buy button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all button link"
    }
  ],
  "presets": [
    {
      "name": "Featured Products Lovable"
    }
  ]
}
{% endschema %}