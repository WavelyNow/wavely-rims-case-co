{{ 'features-lovable.css' | asset_url | stylesheet_tag }}

<div class="features-lovable-section">
  <div class="container">
    <div class="features-grid">
      {% for i in (1..4) %}
        {% assign feature_title = section.settings['feature_' | append: i | append: '_title'] %}
        {% assign feature_desc = section.settings['feature_' | append: i | append: '_description'] %}
        {% assign feature_icon = section.settings['feature_' | append: i | append: '_icon'] %}
        
        {% if feature_title != blank %}
          <div class="feature-item">
            <div class="feature-icon">
              {% case feature_icon %}
                {% when 'shield' %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                {% when 'sparkles' %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 3L9.5 8.5L4 11l5.5 2.5L12 19l2.5-5.5L20 11l-5.5-2.5z"></path>
                  </svg>
                {% when 'truck' %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10 17h4v5h-4zM14 7h6v5h-6zM5 17h4v5H5zM3 7h6v5H3z"></path>
                  </svg>
                {% when 'refresh-cw' %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"></path>
                  </svg>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                  </svg>
              {% endcase %}
            </div>
            <h3 class="feature-title">{{ feature_title }}</h3>
            <p class="feature-description">{{ feature_desc }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

